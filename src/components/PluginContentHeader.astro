---
import { Code } from 'astro-expressive-code/components';
import path from 'node:path';
const plugin_id = path.basename(Astro.props.entry.slug);
---

<a
  href={`https://cdnjs.cloudflare.com/ajax/libs/jcanvas/22.1.3/esm/jcanvas-${plugin_id}.min.js`}
  class="button download"
>
  Download (cdnjs)
</a>

<Code
  lang="js"
  code={`
// UMD import
import 'jcanvas';
import 'jcanvas/dist/umd/jcanvas-${plugin_id}.min.js';

// ESM import
import 'jcanvas';
import 'jcanvas/dist/esm/jcanvas-${plugin_id}.min.js';'
`}
/>
