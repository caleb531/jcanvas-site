---
import { Code } from 'astro-expressive-code/components';
import path from 'node:path';
const plugin_id = path.basename(Astro.props.entry.slug);
---

<a
  href={`https://cdnjs.cloudflare.com/ajax/libs/jcanvas/22.1.3/esm/jcanvas-${plugin_id}.min.js`}
  class="button download"
>
  Download (cdnjs)
</a>

<Code
  lang="js"
  code={`
// In order for the external 'jcanvas' and 'jquery' dependencies
// in these plugin modules to be resolved correctly, you will
// probably need to import the modules asynchronously with \`import()\`
// (the 'jcanvas' core library can still be imported synchronously)

// UMD import
await import('jcanvas/dist/umd/jcanvas-${plugin_id}.min.js');

// ESM import
await import('jcanvas/dist/esm/jcanvas-${plugin_id}.min.js');
`}
/>
